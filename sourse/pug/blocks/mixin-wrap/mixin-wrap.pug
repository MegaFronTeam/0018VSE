mixin sMaterialsTootlip(text, icon)
	+b.tooltip-wrap
		+e.hover!= text
		+icon(icon)

mixin sMaterialsItem(img, title, text, date, name, def=true, ...items)
	+e.col.col-12.col-md-6.col-lg-4&attributes(attributes)(data-aos="fade-up")
		+b.sMaterials-item
			block
			if def
				+e.img-wrap
					.img-wrap-center
						img(src=`img/${img}` alt="image")
			else
				+e.img-wrap--vertical
					.img-wrap-center
						img(src=`img/${img}` alt="image")
			+e.content 
				if name
					+e.name!= name
				.h4!= title 
				+e.text(href="#")!= text
				+e.date!= date
				+tags(...items)

mixin sMaterialsItemSecond(img, title, text, date, name, ...items)
	+e.col.col-12.col-md-6(data-aos="fade-up")
		+b.sMaterials-item--second.bg-wrap
			block
			+e.img-wrap-bg.picture-bg
				img(src=`img/${img}` alt="image")
			+e.content 
				if name
					+e.name!= name
				.h5.mono!= title 
				+e.text(href="#")!= text
				+e.date!= date
				+tags(...items)

mixin tags(...items)
	+b.tags&attributes(attributes)
		+e.inner-row.row
			each item in items
				+e.inner-col--shown.col-auto
					+e.link(href="#")!= item
			+e.inner-col--js.col-auto
				+e.link--js: +icon('more-horizontal')
				+e.show-more
					+e.inner-row.row
						.col-auto
							+e.link(href="#") Управление
						.col-auto
							+e.link(href="#") Освоение
						.col-auto
							+e.link(href="#") Люди
						.col-auto
							+e.link(href="#") Пограничье
						.col-auto
							+e.link(href="#") Образы территории