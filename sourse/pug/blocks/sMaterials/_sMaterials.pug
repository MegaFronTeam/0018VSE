mixin sMaterialsTootlip(text, icon)
	+e.tooltip-wrap
		+e.tooltip-hover!= text
		+icon(icon)

mixin sMaterials(data)
	// start sMaterials
	+b.SECTION.sMaterials.section#sMaterials&attributes(attributes)
			mixin item(i, title, text, date, name, ...items)
				.col-md-6.col-lg-4
					+e.item
						block
						+e.img-wrap
							+img(`img/sMaterials-img-${i}.png`)
						+e.content 
							if name
								+e.name!= name
							.h5!= title 
							+e.text(href="#")!= text
							+e.date!= date
							+e.inner-row.row
								each item in items
									+e.inner-col--shown.col-auto
										+e.link(href="#")!= item
								+e.inner-col--js.col-auto
									+e.link--js: +icon('more-horizontal')
									+e.show-more
										+e.inner-row.row
											.col-auto
												+e.link(href="#") Управление
											.col-auto
												+e.link(href="#") Освоение
											.col-auto
												+e.link(href="#") Люди
											.col-auto
												+e.link(href="#") Пограничье
											.col-auto
												+e.link(href="#") Образы территории
			+e.row.row
				.col-12
					+e.title
						+icon('folder')
						h4 Архивный фонд
				+item(1, 'Польское кино: визитные карточки', 'Лекции Дениса Вирена о&nbsp;ключевых эпохах и&nbsp;явлениях в&nbsp;истории кинематографа Польши, а&nbsp;также идеальный польский телевизор, путеводитель по&nbsp;Польше 1930-х на&nbsp;примере фильма &laquo;Ва-банк&raquo; и&nbsp;топ главных польских фильмов по&nbsp;мнению Дэвида Линча и&nbsp;Мартина Скорсезе', '04 сентября 2022', '', 'Европейский север', 'XVIII в.', 'Управление', 'Визуальное', 'Визуальное')
					+sMaterialsTootlip('Архивный фонд', 'folder')
				+item(2,'Что мы знаем об этрусках', 'История загадочной цивилизации, которая была главным конкурентом древних римлян в Италии, а потом исчезла', '03 сентября 2022', '', 'Восточная Сибирь', 'Западная Сибирь', 'XX в. (до 1917 г.)', 'XX в. (1991 г. и позднее)')
					+sMaterialsTootlip('Архивный фонд', 'folder')
				+item(3, 'Польское кино: визитные карточки', 'Лекции Дениса Вирена о&nbsp;ключевых эпохах и&nbsp;явлениях в&nbsp;истории кинематографа Польши, а&nbsp;также идеальный польский телевизор, путеводитель по&nbsp;Польше 1930-х на&nbsp;примере фильма &laquo;Ва-банк&raquo; и&nbsp;топ главных польских фильмов по&nbsp;мнению Дэвида Линча и&nbsp;Мартина Скорсезе', '02 сентября', '', 'Европейский север', 'XVIII в.', 'Визуальные образы', 'Война', 'Управление', 'Визуальное')
					+sMaterialsTootlip('Архивный фонд', 'folder')
			+e.row.row
				.col-12
					+e.title
						+icon('books')
						h4 Книги и исследования
				+item(4, 'Над пропастью во&nbsp;ржи', 'История загадочной цивилизации, которая была главным конкурентом древних римлян в&nbsp;Италии, а&nbsp;потом исчезла', '04 сентября 2022', 'Джером Сэлинджер', 'Юг', 'XVIII в.', 'Визуальное', 'Война')
					+sMaterialsTootlip('Книги и исследования', 'books')
				+item(5, 'A Cultural History of Russia', 'Лекции Дениса Вирена о&nbsp;ключевых эпохах и&nbsp;явлениях в&nbsp;истории кинематографа Польши, а&nbsp;также идеальный польский телевизор, путеводитель по&nbsp;Польше 1930-х на&nbsp;примере фильма &laquo;Ва-банк&raquo; и&nbsp;топ главных польских фильмов по&nbsp;мнению Дэвида Линча и&nbsp;Мартина Скорсезе', '04 сентября 2022', 'Orlando Figes', 'Поволжье', 'Поволжье', 'Война')
					+sMaterialsTootlip('Книги и исследования', 'books')
				+item(6, 'Вторжение: взгляд из России', 'Лекции Дениса Вирена о&nbsp;ключевых эпохах и&nbsp;явлениях в&nbsp;истории кинематографа Польши, а&nbsp;также идеальный польский телевизор, путеводитель по&nbsp;Польше 1930-х на&nbsp;примере фильма &laquo;Ва-банк&raquo; и&nbsp;топ главных польских фильмов по&nbsp;мнению Дэвида Линча и&nbsp;Мартина Скорсезе', '04 сентября 2022', 'Йозеф Паздерка', 'Поволжье', 'XVIII в.', 'Война')
					+sMaterialsTootlip('Книги и исследования', 'books')
			+e.row.row
				.col-12
					+e.title
						+icon('grid')
						h4 Лонгрид
				+item('')
	// end sMaterials